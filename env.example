# ===============================
# Aithen Application Environment Configuration
# ===============================

# Application Environment
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:your-app-key-here

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=aithen_db
DB_USERNAME=aithen_user
DB_PASSWORD=aithen_password
DB_ROOT_PASSWORD=aithen_root_password

# Cache Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# AI Service Configuration
AI_SERVICE_URL=http://ai-service:8000
AI_MODEL=mistral

# Service URLs (for external access)
API_URL=http://localhost:80
UI_URL=http://localhost:3000
AI_URL=http://localhost:8000

# Nginx Configuration
NGINX_PORT=8080

# Security
BCRYPT_ROUNDS=12
JWT_SECRET=your-jwt-secret-here

# Mail Configuration (Optional)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=
MAIL_FROM_ADDRESS=noreply@aithen.ai
MAIL_FROM_NAME="Aithen AI"

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=info
